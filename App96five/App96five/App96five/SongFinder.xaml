                                        <Image.Source>
                                            <UriImageSource Uri="{Binding tracks[0].albumart_url}"/>
                                        </Image.Source>
                                    </Image>
                                    <StackLayout VerticalOptions="Center">
                                        <Label Text="{Binding tracks[0].title}" TextColor="Black" FontAttributes="Bold" FontFamily="Montserrat"/>
