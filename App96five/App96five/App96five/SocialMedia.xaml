<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App96five.SocialMedia">
    <ContentPage.Content>
        <ScrollView Margin="0" Padding="0">
            <StackLayout Margin="0" Padding="0">
                <Button  x:Name="FbBtn" ContentLayout="Top,0" 
                         BackgroundColor="White" Image="fblogo.png"  
                         HorizontalOptions="FillAndExpand" 
                         Clicked="GoToFacebook" />
                <Button  x:Name="IgBtn" ContentLayout="Top,0" 
                         BackgroundColor="White" Image="IGlogo.png"  
                         HorizontalOptions="FillAndExpand" 
                         Clicked="GoToInstagram" />
                <Button  x:Name="TwBtn" ContentLayout="Top,0" 
                         BackgroundColor="White" Image="TwLogo.png"  
                         HorizontalOptions="FillAndExpand" 
                         Clicked="GoToTwitter" />
                <Button  x:Name="UtBtn" ContentLayout="Top,0" 
                         BackgroundColor="White" Image="UtLogo.png"  
                         HorizontalOptions="FillAndExpand" 
                         Clicked="GoToYoutube" />
            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>